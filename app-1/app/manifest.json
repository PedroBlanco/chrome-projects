{
  	"name": "GIFT Format Editor",
  	"description": "Editor for questions from Moodle questions banks in GIFT Format",
  	"version": "0.0.1",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
  		"fileBrowserHandler",
  		{
  			"fileSystem": [
  				"write",
  				"retainEntries",
  				"directory"
  			]
  		},
  		"storage",
  		"syncFileSystem",
  		"system.storage",
  		"unlimitedStorage",
  		"<all_urls>"
  	],
  	"icons": {
  		"16": "images/icon-16.png",
  		"128": "images/icon-128.png"
  	},
  	"app": {
  		"background": {
  			"scripts": [
  				"scripts/main.js",
  				"scripts/chromereload.js"
  			]
  		}
  	}
  }